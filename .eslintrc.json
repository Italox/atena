{
  "plugins": ["prettier"],
  "extends": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "rules": {
    "strict": 0,
    "no-console": "off",
    "indent-size": [true, 2],
    "prettier/prettier": [
      "error",
      {
        "useTabs": false,
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "none",
        "semi": false
      }
    ]
  }
}
